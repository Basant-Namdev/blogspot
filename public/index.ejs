<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BlogSpot</title>
    <link rel="stylesheet" href="style.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://kit.fontawesome.com/126cda3aca.css">
</head>

<body>
    <%- include('./loader.html'); %>
    <!-- Navigation Bar -->
    <header style="position: sticky; top: 0rem; z-index: 5;">
        <nav>
            <div class="logo">
                <a href="/">BlogSpot</a>
            </div>
            <ul>
                <li><a href="#">Home</a></li>
                <li><a href="#about">About</a></li>
                <li><a href="#blogPosts">Blog Posts</a></li>
                <li><a href="#contact">Contact</a></li>
                <li><a href="#" id="login-register">login / register</a></li>
            </ul>
        </nav>
    </header>

    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-content">
            <h1>Welcome to <strong style="font-size: 3.5rem; color: mediumseagreen;">BlogSpot</strong></h1>
            <p>Your ultimate destination for reading and sharing amazing blogs.</p>
            <button onclick="toggleForms('signup')">Start Blogging Now</button>
        </div>
        <div class="main">
            <div class="login">
                <form action="/login" method="post" id="login-form" enctype="application/x-www-form-urlencoded">
                    <label>Login</label>
                    <input type="email" name="username" id="loginEmail" placeholder="enter your email" required="">

                    <div id="loginPass">
                        <input type="password" name="password" id="loginPassword" placeholder="password" required="">
                        <i class="fa-solid fa-eye eye" onclick="eye()"></i>
                        <i class="fa-solid fa-eye-slash eye" onclick="eye()"></i>
                        <p id="forgot-password"><a href="/forget-password"><small>forgot password</small></a></p>
                    </div>
                    <span id="login-auth-failed"></span>
                    <button type="submit">Login</button>
                </form>
                <p style="text-align: center; color: black;">--------- Or ---------</p>
                <button type="button" onclick="toggleForms('signup')" style="background: #be3b3b;">Sign Up</button>
            </div>

            <div class="signup">
                <form action="/signUp" method="post" id="signup-form" enctype="application/x-www-form-urlencoded">
                    <label>Sign up</label>
                    <input type="text" name="name" id="name" placeholder="enter your name" required="">
                    <input type="email" name="username" id="email" placeholder="enter your email" required="">
                    <input type="password" name="password" placeholder="create password" id="password" required="">
                    <input type="password" name="confirm-password" placeholder="confirm password" id="confirm-password"
                        required="">
                    <i class="fa-solid fa-eye eye" onclick="signEye()"></i>
                    <i class="fa-solid fa-eye-slash eye" onclick="signEye()"></i>
                    <span id="error-message"></span>
                    <button type="submit" style="background: #be3b3b;">Sign up</button>
                </form>
                <p style="text-align: center; color: black;">--------- Or ---------</p>
                <button type="button" onclick="toggleForms('login')">Login</button>
            </div>
        </div>
    </section>

    <!-- Blog Previews Section -->
    <section class="blog-previews" id="blogPosts">
        <div class="container">
            <h2 style="padding: 1rem;">Recent Blog Posts</h2>
            <div class="blogs">
                <% for (let blog of blogs) { %>
                    <div class="blog">
                        <% if(blog.coverImage){%>
                            <img src="<%= blog.coverImage %>" alt="" class="coverImage">
                            <%}%>
                                <h3>
                                    <%= blog.title %>
                                </h3>
                                <p>
                                    <%= blog.description %>
                                </p>
                                <a href="#" onclick="alert('login required')">Read More</a>
                    </div>
                    <% } %>
            </div>
        </div>
    </section>

    <!-- About Us Section -->

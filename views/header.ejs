<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        header {
            box-shadow: 0 0 0.4rem rgba(0, 0, 0, 0.2);
            background: linear-gradient(to right, #2c3e50, #af4c4c);
            padding: 0.5rem .7rem;
            z-index: 1000;
        }

        .navbar-brand {
            font-size: 24px;
            font-weight: bold;
            color: white !important;
        }

        .navbar-toggler {
            border: none;
        }

        .offcanvas {
            width: 250px;
        }

        .offcanvas-header {
            background: #2c3e50;
            color: white;
        }

        .navbar-nav .nav-link {
            color: white !important;
            text-align: center;
        }

        .navbar-nav .nav-link:hover {
            text-decoration: underline;
        }

        #profile {
            width: 3rem;
            height: 3rem;
            border-radius: 50%;
            object-fit: cover;
            margin: 0;
        }
        @media screen and (min-width: 991px) {
            .offcanvas-body{
                display: flex;
                justify-content: end;
            }
        }
    </style>

<header>
    <nav class="navbar navbar-expand-lg h-auto">
        <div class="container-fluid d-flex align-items-center justify-content-between">
            <!-- Logo and Hamburger Menu -->
            <div class="d-flex align-items-center">
                <button class="navbar-toggler me-2" type="button" data-bs-toggle="offcanvas"
                    data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <a class="navbar-brand" href="/">BlogSpot</a>
            </div>

            <!-- Profile Image (Shows beside menu on large screens) -->
            <div class="d-flex align-items-center d-lg-none"> 
                <img src="<%=userProfile.profile%>" alt="Profile" id="profile">
            </div>

            <!-- Offcanvas Sidebar -->
            <div class="offcanvas offcanvas-start bg-dark text-white" tabindex="-1" id="offcanvasNavbar">
                <div class="offcanvas-header">
                    <h5 class="offcanvas-title">BlogSpot</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas"
                        aria-label="Close"></button>
                </div>
                <div class="offcanvas-body d-flex flex-column">
                    <ul class="navbar-nav  justify-content-end">
                        <li class="nav-item text-center"><a class="nav-link" href="/dashbord">Dashboard</a></li>
                        <li class="nav-item text-center"><a class="nav-link" href="/dashbord/myBlogs">My Blogs</a></li>
                        <li class="nav-item text-center"><a class="nav-link" href="/dashbord/postBlog">Post a Blog</a></li>
                        <li class="nav-item text-center"><a class="nav-link" href="/dashbord/userDetails">User Details</a></li>
                        <li class="nav-item text-center"><a class="nav-link" href="/dashbord/resetPassword">Reset Password</a></li>
                        <li class="nav-item text-center"><a class="nav-link" href="/dashbord/logout">Logout</a></li>
                    </ul>
                </div>
            </div>

            <!-- Profile Image (Visible on large screens, moves to the end) -->
            <div class="d-none d-lg-flex align-items-center">
                <img src="<%=userProfile.profile%>" alt="Profile" id="profile">
            </div>
        </div>
    </nav>
</header>
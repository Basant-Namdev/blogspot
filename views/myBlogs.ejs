<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
        }

        #blogs-container {
            display: flex;
            flex-wrap: wrap;
            /* Allow items to wrap to the next line */
            justify-content: center;
            /* Center items horizontally */
            padding: 2rem;
            /* Add padding around the container */
            flex-direction: column;
        }

        .blog {
            display: flex;
            background: #fff;
            border-radius: 0.5rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
            transition: all ease .2s;
        }


        .blog:hover {
            transform: scale(1.01);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.8);
        }

        a {
            text-decoration: none;
        }

        /* Media Queries for Responsiveness */
        @media (max-width: 768px) {
            .blog {
                width: 100%;
                /* Full width on smaller screens */
                height: auto;
                /* Allow height to adjust based on content */
            }
        }


        .blog-image {
            width: 160px;
            height: 160px;
            object-fit: cover;
        }

        .blog-content {
            padding: .7rem;
        }

        .blog-title {
            font-size: 1.35rem;
            color: #1e3a8a;
            font-weight: bold;
            margin: 0;
        }

        .blog-description {
            font-size: 1.1rem;
            color: #555;
        }

        /* Blog Title and Cover Icon */
        .blog-title-wrapper {
            display: flex;
            align-items: center;
            margin-bottom: 0.5rem;
            gap: 0.5rem;
        }

        .cover-icon {
            font-size: 15px;
            font-weight: bold;
            color: #fff;
            width: 3rem;
            height: 3rem;
            display: flex;
        }

        .blog-image-wrapper {
            width: 160px;
            height: 160px;
        }
    </style>
    <script src="https://kit.fontawesome.com/126cda3aca.js" crossorigin="anonymous"></script>
</head>

<body>
    <%- include('./header.ejs') %>
        <div id="blogs-container">
            <% for(let blog of blogs){ %>

                <section style="display: flex; margin: 1rem;">
                    <a href="/dashbord/<%= blog._id %>" target="" rel="noopener noreferrer"
                        style="text-decoration: none;">
                        <div class="blog">
                            <div class="blog-image-wrapper">
                                <img src="<%= blog.coverImage%>" alt="Cover Image" class="blog-image">
                            </div>
                            <div class="blog-content">
                                <div class="blog-title-wrapper">
                                    <img src="<%= blog.postBy.profile %>" alt="" class="cover-icon">
                                    <h2 class="blog-title">
                                        <%=blog.title%>
                                    </h2>
                                </div><br>
                                <p class="blog-description">
                                    <%=blog.description%>
                                </p>
                            </div>
                        </div>
                    </a>
                    <span><i class="fa-solid fa-trash" style="margin: 1rem;
    font-size: 1.5rem;cursor: pointer;" onclick="deleteBlog('<%= blog._id%>',this)"></i></span>
                </section>
                <% } %>
        </div>

        <script>
            function deleteBlog(id, iconElement) {
                if (confirm("Are you sure you want to delete this blog post?")) {
                    fetch(`myBlogs/deleteBlog/${id}`, {
                        method: 'DELETE',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                    })
                        .then(response => {
                            if (response.ok) {
                                alert("Blog post deleted successfully");
                                const section = iconElement.closest('section'); // Find the closest section element
                                if (section) {
                                    section.remove();
                                }
                            } else {
                                return response.json().then(data => {
                                    alert(data.message);
                                });
                            }
                        })
                        .catch(error => {
                            alert("An error occurred while trying to delete the blog post.");
                            console.error("Error:", error);
                        });
                }
            }
        </script>
</body>

</html>
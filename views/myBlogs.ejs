<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
        }

        #blogs-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            flex-direction: column;
        }

        .blog {
            display: flex;
            background: #fff;
            border-radius: 0.5rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
            transition: all ease .2s;
        }

        .blog:hover {
            transform: scale(1.01);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.8);
        }

        a {
            text-decoration: none;
        }

        .blog-image {
            width: 160px;
            height: 160px;
            object-fit: cover;
        }

        .blog-content {
            padding: 12px 0px 0px 10px;
        }

        .blog-title {
            font-size: 1.35rem;
            color: #1e3a8a;
            font-weight: bold;
            margin: 0;
        }

        .blog-description {
            font-size: 1.1rem;
            color: #555;
            overflow: hidden;
            display: -webkit-box;
            -webkit-box-orient: vertical;
            -webkit-line-clamp: 2;
            line-clamp: 2;
        }

        /* Blog Title and Cover Icon */
        .blog-title-wrapper {
            display: flex;
            align-items: center;
            margin-bottom: 0.5rem;
            gap: 0.5rem;
        }

        .cover-icon {
            font-size: 15px;
            font-weight: bold;
            color: #fff;
            width: 3rem;
            height: 3rem;
            display: flex;
            border-radius: 50%;
        }

        .blog-image-wrapper {
            width: 160px;
            height: 160px;
        }

        .icon {
            margin: 1rem;
            font-size: 1.5rem;
            cursor: pointer;
            font-size: large;
            margin: 10px;
        }

        /* Media Queries for Responsiveness */
        @media (max-width: 768px) {
            .blog {
                flex-direction: column;
            }

            .blog-image-wrapper {
                width: 100%;
                height: auto;
            }

            .blog-image {
                width: 100%;
                height: auto;
                object-fit: cover;
            }

            .blog-title {
                font-size: 1.2rem;
            }

            .blog-description {
                font-size: 0.9rem;
            }
        }

        @media (max-width: 480px) {
            .blog {
                flex-direction: column;
            }

            .blog-image-wrapper {
                width: 100%;
                height: auto;
            }

            .blog-image {
                width: 100%;
                height: auto;
                object-fit: cover;
            }

            .blog-title {
                font-size: 1rem;
            }

            .blog-description {
                font-size: 0.8rem;
            }
        }

        @media (width > 768px) {
            .blog-image {
                padding: 12px 0px 12px 10px;
            }
        }
    </style>
    <script src="https://kit.fontawesome.com/126cda3aca.js" crossorigin="anonymous"></script>
</head>

<body>
    <%- include('../public/loader.html'); %>
        <%- include('./header.ejs') %>
            <div id="blogs-container">
                <% for(let blog of blogs){ %>

                    <section style="display: flex; margin: 14px 10px 0px 18px">
                        <a href="/dashbord/<%= blog._id %>" target="" rel="noopener noreferrer"
                            style="text-decoration: none;flex: auto;">
                            <div class="blog">
                                <div class="blog-image-wrapper">
                                    <img src="<%= blog.coverImage%>" alt="Cover Image" class="blog-image">
                                </div>
                                <div class="blog-content">
                                    <div class="blog-title-wrapper">
                                        <img src="<%= blog.postBy.profile %>" alt="" class="cover-icon">
                                        <h2 class="blog-title">
                                            <%=blog.title%>
                                        </h2>
                                    </div><br>
                                    <p class="blog-description">
                                        <%=blog.description%>
                                    </p>
                                </div>
                            </div>
                        </a>
                        <span style="display: flex;flex-direction: column;">
                            <a href="/dashbord/editblog/<%= blog._id%>" style="color: black;"><i
                                    class="fa-solid fa-pencil icon"></i></a>
                            <i class="fa-solid fa-trash icon" data-id="<%= blog._id %>"></i>
                        </span>
                    </section>
                    <% } %>
            </div>

            <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
            <script>
                document.addEventListener('DOMContentLoaded', () => {
                    const deleteButtons = document.querySelectorAll('.fa-trash');
                    deleteButtons.forEach(element => {
                        element.addEventListener('click', () => {
                            deleteBlog(element.dataset.id, element);
                        });
                    });
                });
                async function deleteBlog(id, iconElement) {
                    const result = await Swal.fire({
                        title: 'Delete this blog?',
                        text: 'This action cannot be undone.',
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonText: 'Yes, delete it!',
                        cancelButtonText: 'Cancel'
                    });
                    if (!result.isConfirmed) return;
                    if (result.isConfirmed) {
                        document.getElementById('loader-container-container').style.display = 'block'
                        fetch(`myBlogs/deleteBlog/${id}`, {
                            method: 'DELETE',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                        })
                            .then(async (response) => {
                                document.getElementById('loader-container-container').style.display = 'none'
                                if (response.ok) {
                                    await Swal.fire('Deleted!', 'Your blog has been removed.', 'success');
                                    const section = iconElement.closest('section'); // Find the closest section element
                                    if (section) {
                                        section.remove();
                                    }
                                } else {
                                    return response.json().then(data => {
                                        Swal.fire('Oopsâ€¦', data.message || 'Deletion failed.', 'error');
                                    });
                                }
                            })
                            .catch(error => {
                                document.getElementById('loader-container-container').style.display = 'block'
                                Swal.fire('Error', 'Network error. Please try again.', 'error');
                                console.error("Error:", error);
                            });
                    }
                }
            </script>
</body>

</html>